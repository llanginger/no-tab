{
  "manifest_version": 2,
  "name":  "Tab-U-Later",
  "description": "An extension that saves you from zombie tabs!",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Tab-U-Later"
  },

  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "run_at": "document_end",
    "js" : ["clickChecker.js", "jquery-3.1.0.min.js"]
  }],

  "permissions": [
    "tabs",
    "windows",
    "webNavigation",
    "webRequest",
    "storage",
    "http://tabbit.org/about",
    "http://leolanginger.com/",
    "http://www.facebook.com/*",
    "webRequestBlocking"
  ]
}
